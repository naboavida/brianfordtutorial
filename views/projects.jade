extends indexLayout

block body
  header
    div.wrap
      a#logo(href='/')
      h2 My Projects
      ul
        li(style='float:left')
          div.button
            a(href='', style='padding-bottom:3px;') Account
        li(style='float:left')
          div.button
            a(href='', style='padding-bottom:3px;') Log Out
  div(ng-controller='ProjectsCtrl', style='text-align:center;')
    p welcome
    a(href='project/') go to project...
    a(href='/') or go home
    div(style='margin:25px')
      ul.project-list-item(style='width:350px;display:block;margin-left:auto;margin-right:auto;')
        li.project-item(ng-repeat='project in projects')
          a(href='/project/{{project.id}}')
            div(style='padding:25px;margin: 10px 0px;width:300px;') 
              p{{project.nome}} 
              p {{project.habitantesPax}} habitantes {{project.areaHa}} km2
        li.project-item.add-project
          a(href='/projects/addProject')
            div(style='padding:25px;margin: 10px 0px;width:300px;') 
              p Add Project
    //- div(ng-view)

  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')