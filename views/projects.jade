extends indexLayout

block body
  header
    div.wrap
      a#logo(href='/')
      h2 My Projects
      ul
        li(style='float:left')
          div.button
            a(href='', style='padding-bottom:3px;') Account
        li(style='float:left')
          div.button
            a(href='', style='padding-bottom:3px;') Log Out
  div(ng-controller='ProjectsCtrl', style='text-align:center;')
    p welcome
    a(href='project/') go to project...
    a(href='/') or go home
    div(style='margin:25px')
      ul.menuItem.menuItemLarge(style='width:350px;display:block;margin-left:auto;margin-right:auto;')
        li.listItem.listItemLarge(ng-repeat='project in projects')
          a(href='/project/{{project.id}}')
            div.innerItem.innerItemBig
              img(src='pics/saotome.jpg')
              div
                p(style='color:#eee;') {{project.nome}}
                p(style='margin-top:5px;font-size:12px;') {{project.habitantesPax}} habitantes {{project.areaHa}} km2
        li.listItem.listItemLarge.project-item.add-project
          a(href='/addProject')
            div.innerItem.innerItemBig
              p.innerItemBigParagraph Add Project
    //- div(ng-view)

  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')